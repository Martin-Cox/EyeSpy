{
	"name": "EyeSpy",
	"version": "0.0.1",
	"manifest_version": 2,
	"description":  "EyeSpy Extension",
	"browser_action": {
		"default_icon": "src/resources/icon.png",
		"default_title": "EyeSpy",
		"default_popup": "src/resources/EyeSpy.html"
	},
	"icons": {
		"128":  "src/resources/icon.png"
	},
	"content_scripts": [
		{
			"all_frames": false,
			"js": ["src/application/EyeSpy.js"],
			"matches": ["<all_urls>"],
			"run_at": "document_idle"
		}
	],
	"background": {
		"scripts": ["src/application/Background.js"]
	},
	"permissions": [
		"activeTab",
		"tabs"
	]
}